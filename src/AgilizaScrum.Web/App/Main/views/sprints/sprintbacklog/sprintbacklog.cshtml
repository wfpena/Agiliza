<style>
    .sprint{
        display: inline-block;
        width:180px;
    }
</style>
<div class="row clearfix" ng-controller="app.views.sprints.sprintbacklog as vm">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        @*<div class="card main-content">*@
            <div style="padding:10px" class="card header">
                <h2 style="float:left;;margin:0">
                    @L("Sprints")
                </h2>
                <ul style="list-style:none;float:right;margin:0" class="header-dropdown m-r--5">
                    <i class="fa fa-spin fa-spinner" ng-if="vm.isTableLoading"></i>
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);" class="waves-effect waves-block()" ng-click="vm.refresh();"><i class="material-icons">refresh</i> @L("Refresh")</a></li>
                        </ul>
                    </li>
                </ul>
            </div>

            <div style="overflow-x:scroll;white-space:nowrap" class="row">
                <div ng-repeat="sprint in vm.sprints" class="sprint" ui-sref="releaseInfo({id: release.id})">
                    <div style="padding:5px">
                        <div class="card-product">
                            <h4>
                                {{sprint.name}}
                            </h4>
                            <p>
                                {{sprint.description}}
                            </p>
                        </div>
                            
                    </div>
                       
                </div>
            </div>
            <button type="button" data-toggle="modal" class="btn btn-primary btn-circle waves-effect waves-circle waves-float pull-right" ng-click="vm.openProductCreationModal()">
                <i class="material-icons">add</i>
            </button>
        @*</div>*@
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-mousewheel/3.1.13/jquery.mousewheel.js" type="text/javascript"></script>
<script>
    $(window).bind('mousewheel', function (event, delta) {
        console.log("adw");
        if (delta > 0) {
            window.scrollBy(-80, 0);
        } else window.scrollBy(80, 0);
    });
    $(function () {

        $("body,*").mousewheel(function (event, delta) {
            console.log("adw");
            this.scrollLeft -= (delta * 30);

            event.preventDefault();

        });

    });
</script>