<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div style="padding:10px" class="card header">
            <h2 style="float:left;;margin:0">
                {{vm.product.name}}
            </h2>
            <ul style="list-style:none;float:right;margin:0" class="header-dropdown m-r--5">
                <i class="fa fa-spin fa-spinner" ng-if="vm.isTableLoading"></i>
                <li class="dropdown">
                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        <i class="material-icons">more_vert</i>
                    </a>
                    <ul class="dropdown-menu pull-right">
                        <li><a href="javascript:void(0);" class="waves-effect waves-block()" ng-click="vm.refresh();"><i class="material-icons">refresh</i> @L("Refresh")</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-7 col-md-7 col-sm-7 col-xs-7 card">
            <div class="header">
                <h2 style="float:left;;margin:0">
                    @L("ProductBacklog")
                </h2>
            </div>
            <div class="body">
                <div class="row">
                    <div ng-repeat="userStory in vm.stories" class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                        <div class="card-user">
                            <h4>
                                {{userStory.name}}
                            </h4>
                            <p>
                                {{userStory.description}}
                            </p>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary waves-effect" ng-click="vm.openUserStoryModal()">
                        +@L("UserStory")
                    </button>
                </div>
            </div>
        </div>
        <div style="float:right" class="col-lg-3 col-md-3 col-sm-3 col-xs-3 card">
            <div class="header">
                <h2 style="float:left;;margin:0">
                    @L("ReleaseBacklog")
                </h2>
            </div>
            <div class="body">
                <button type="submit" class="btn btn-primary waves-effect" ng-click="vm.save()">
                    +@L("Ship")
                </button>
            </div>
        </div>
    </div>
    
</div>
